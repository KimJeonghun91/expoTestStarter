{
  "name": "expotestwithappiumandjest",
  "main": "expo-router/entry",
  "version": "1.0.0",
  "scripts": {
    "start": "expo start",
    "reset-project": "node ./scripts/reset-project.js",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "lint": "expo lint",
    "---1": "[ 유닛 테스트 ] ---------------------------------------- ",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "---2": "[ e2e 테스트 ] ----------------------------------------- ",
    "[2.1]": "안드로이드 APK 빌드(expo run:android).",
    "[2.2]": "빌드 후 [패키지이름/경로]를 wdio.conf.ts 입력.",
    "test:e2e": "NODE_OPTIONS='--import tsx' wdio run ./__tests__/wdio.conf.ts",
    "test:e2e:basic": "NODE_OPTIONS='--import tsx' wdio run ./__tests__/wdio.conf.ts --spec ./__tests__/__e2e__/specs/basicScreen.e2e.ts",
    "test:e2e:android": "PLATFORM=android yarn test:e2e",
    "test:e2e:ios": "PLATFORM=ios yarn test:e2e",
    "test:e2e:single": "wdio run ./__tests__/wdio.conf.ts --spec",
    "---3": "[ 테스트 리포트 ]---------------------------------------- ",
    "report:unit": "open __tests__/coverage/lcov-report/index.html",
    "report:e2e": "allure generate allure-results --clean && allure open",
    "---4": "[ MOCK 서버 ]---------------------------------------- ",
    "start:mock": "cd server && json-server --watch db.json --host 0.0.0.0 --port 3000"
  },
  "dependencies": {
    "@expo/vector-icons": "^14.0.2",
    "@react-navigation/native": "^6.0.2",
    "axios": "^1.7.7",
    "expo": "~51.0.28",
    "expo-constants": "~16.0.2",
    "expo-font": "~12.0.9",
    "expo-linking": "~6.3.1",
    "expo-router": "~3.5.23",
    "expo-splash-screen": "~0.27.5",
    "expo-status-bar": "~1.12.1",
    "expo-system-ui": "~3.0.7",
    "expo-web-browser": "~13.0.3",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-native": "0.74.5",
    "react-native-gesture-handler": "~2.16.1",
    "react-native-reanimated": "~3.10.1",
    "react-native-safe-area-context": "4.10.5",
    "react-native-screens": "3.31.1",
    "react-native-web": "~0.19.10"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@testing-library/react-native": "^12.8.0",
    "@types/jest": "^29.5.12",
    "@types/react": "~18.2.45",
    "@types/react-test-renderer": "^18.0.7",
    "@wdio/allure-reporter": "^9.2.2",
    "@wdio/appium-service": "^9.2.1",
    "@wdio/cli": "^9.2.4",
    "@wdio/local-runner": "^9.2.1",
    "@wdio/mocha-framework": "^9.1.3",
    "@wdio/spec-reporter": "^9.1.3",
    "@wdio/visual-service": "^6.2.1",
    "appium": "^2.12.1",
    "appium-uiautomator2-driver": "^3.8.0",
    "jest": "^29.2.1",
    "jest-expo": "~51.0.3",
    "react-test-renderer": "18.2.0",
    "typescript": "~5.3.3"
  },
  "private": true
}
